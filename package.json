{
  "name": "multifeature-blog-platform",
  "private": true,
  "version": "1.0.0",
  "description": "Multi-language, high-performance blog platform with Next.js and Contentstack Launch",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "generate:launch": "ts-node --project tsconfig.scripts.json scripts/generateLaunchJson.ts",
    "prebuild": "npm run generate:launch"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions/*"
  ],
  "devDependencies": {
    "dotenv": "^16.6.1",
    "eslint": "latest",
    "prettier": "latest",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "latest"
  },
  "packageManager": "npm@10.8.1",
  "dependencies": {
    "contentstack": "^3.26.2",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.541.0",
    "node-fetch": "^3.3.2"
  }
}
